<%= render 'layouts/front_end_nav_bar' %>
<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/assets/post-bg.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="post-heading">
          <h1><%= @article.title %></h1>
          <h2 class="subheading"><%= @article.sub_title unless @article.sub_title.blank? %></h2>
          <span class="meta">Posted by <a href="#"><%= @article.user.email unless @article.user.blank? %> </a> <%= @article.published_at.strftime("%m/%d/%Y") %></span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Post Content -->
<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <p><%= @article.body %></p>
      </div>
    </div>
  </div>
</article>
<div class="container">
  <h2>Comments</h2>
  <div class="row">
    <% unless @comments.blank? %>
        <% @comments.each do |comment| %>
            <p><%= comment.body %> By, <%= comment.name unless comment.name.blank? %>, <%= comment.email unless comment.email.blank?%> </p>
        <% end %>
    <% else %>
        <p>No comments</p>
    <% end %>
  </div>
</div>



<hr>
<% if current_user %>
    <%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Add Comment', new_article_comment_path(@article) %> |
<%= link_to 'Back', articles_path %>
<%= render 'layouts/front_end_footer' %>
